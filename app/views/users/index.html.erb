<table class="m-auto">
  <thead>
  <tr>
    <th>Email</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td class="py-5"><%= user.email %></td>
      <td class="py-5"><%= link_to 'Edit', edit_user_path(user), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full' %></td>
      <td class="py-5"> <%= link_to 'Delete', user_path(user), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

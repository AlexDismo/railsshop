<div class="border p-5 m-auto">
  <h1 class="text-center text-2xl font-bold"><%= @product.name %></h1>
  <p>Description: <%= @product.description %></p>
  <p>Price: <%= number_to_currency(@product.price) %></p>

  <div class="mt-3">
    <% if admin? %>
      <%= link_to 'Edit', edit_product_path(@product), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full' %>
      <%= link_to 'Delete', product_path(@product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-full' %>
    <% end %>
  </div>

  <%= form_tag(add_item_product_path(product_id: @product.id), method: :post, data: { turbo: false }) do %>
    <%= number_field_tag :quantity, 1, min: 1 %>
    <%= submit_tag 'Add to cart', class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-full' %>
  <% end %>

</div>

<div class="mx-auto w-96">
  <h2 class="text-center font-bold text-lg mb-4">Sign up</h2>

  <div class="border p-4 rounded-lg">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="flex flex-col mb-4">
        <%= f.label :email, class: "mb-1" %>
        <%= f.email_field :email, autofocus: true, class: "rounded-lg border-gray-400 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:border-transparent" %>

        <%= f.label :password, class: "mt-3 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "rounded-lg border-gray-400 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:border-transparent" %>

        <%= f.label :password_confirmation, class: "mt-3 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-lg border-gray-400 py-2 px-3 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:border-transparent" %>

        <%= f.submit ("Sign up"), class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

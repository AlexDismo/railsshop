<h2>Cart</h2>

<% if @order.order_descriptions.present? %>
  <table>
    <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
    </thead>
    <tbody>
    <% @order.order_descriptions.each do |description| %>
      <tr>
        <td><%= description.product.name %></td>
        <td><%= description.product.price %></td>
        <td><%= description.quantity %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>Your cart is empty</p>
<% end %>

<h2>Add a Product to Cart</h2>

<%= form_tag orders_path do %>
  <%= hidden_field_tag :product_id, @product.id %>
  <%= submit_tag 'Add to Cart' %>
<% end %>

<%= link_to 'Continue Shopping', products_path %>

<div class="m-auto">
  <h2 class="text-center">Log in</h2>

  <div class="p-3 border">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="flex flex-col input:border">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, class: "border p-2 rounded-md w-full" %><br>

        <%= f.label :password %><br>
        <%= f.password_field :password, autocomplete: "off", class: "border p-2 rounded-md w-full" %><br>

        <% if devise_mapping.rememberable? -%>
          <div class="field flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox h-5 w-5 text-gray-600" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-600" %>
          </div>
        <% end -%>

        <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

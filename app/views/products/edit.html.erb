<div class="w-full m-auto">
  <h2 class="text-center font-bold">Edit Product</h2>
  <% if @product.errors.any? %>
    <div class="border border-red-500 text-red-600 text-center p-2">
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @product, data: {turbo: false}, url: product_path(@product), method: :patch do |f| %>
      <div class="border p-2 flex flex-col items-center">
        <p>
          Title<br>
          <%= f.text_field(:name, {:class => 'border border-black p-3'}) %>
        </p>
        <p>
          Price<br>
          <%= f.text_field(:price, {:class => 'border border-black p-3'}) %>
        </p>
        <p>
          Description<br>
          <%= f.text_area(:description, {:class => 'border border-black p-3'}) %>
        </p>

        <p>
          <%= f.submit({:class => 'border p-3 cursor-pointer bg-gray-400 hover:bg-gray-600'}) %>
        </p>
      </div>
  <% end %>
</div>